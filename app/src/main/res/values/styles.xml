<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- 自定义的确认对话框 -->
    <style name="CustomConfirmDialog" parent="android:style/Theme.Dialog">
        <!-- 设置窗口是否没显示标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置窗口是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 设置窗口边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置窗口背景 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 设置窗口是否浮动 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置触摸窗口外部是否关闭 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <!-- 设置窗口最小宽度最大值 -->
        <item name="android:windowMinWidthMajor">80%</item>
        <!-- 设置窗口最小宽度最小值 -->
        <item name="android:windowMinWidthMinor">80%</item>
        <!-- 设置窗口内容覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置窗口动画风格 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 设置是否启用背景暗淡效果 -->
        <item name="android:backgroundDimEnabled">true</item>

    </style>

    <!-- 对话框开启和关闭的动画 -->
    <style name="style_item" parent="android:Animation">
        <!-- 从屏幕底部弹出 -->
        <!--<item name="@android:windowEnterAnimation">@anim/dialog_enter</item>-->
        <!-- 从弹出的位置收回 -->
        <!--<item name="@android:windowExitAnimation">@anim/dialog_exit</item>-->
    </style>

    <!-- 自定义progress -->
    <style name="Custom_Progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--自定义的确认对话框-->
    <style name="myDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="hintDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>
